mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div.video-mixin__thumb(style=`background-image:url(${video.thumbUrl});background-size: cover;backgroud-position: center;`)
        div.video-mixin__data
            img(src=video.owner.avatarUrl).avatar__video
            div.video-mixin__data-info
                span.video-mixin__title=video.title
                div.video-mixin__meta
                    span.video-mixin__meta__name #{video.owner.name} 
                    div.video-mixin__meta__info
                        span #{video.meta.views} 회 • 
                        span #{Math.floor((Date.now() - video.createdAt.getTime())/86400000)} days ago